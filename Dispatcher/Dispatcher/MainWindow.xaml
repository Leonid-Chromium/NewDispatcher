<Window x:Class="Dispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dispatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Background="{DynamicResource BackFirstLevel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <local:CalendarUC x:Name="CalendarUC" Grid.Column="0" Grid.Row="0"/>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <ComboBox x:Name="styleBox"/>
            <Button x:Name="SetDarkSide" Content="Set Dark Side" Click="SetDarkSide_Click"/>
            <Button x:Name="SetLightSide" Content="Set Light Side" Click="SetLightSide_Click"/>
        </StackPanel>

        <local:TabControlUC x:Name="TabSpace" Grid.Column="1" Grid.RowSpan="3"/>
        <Grid Grid.Column="0" Grid.Row="2" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Left" Width="50"/>
            <Button Grid.Column="1" HorizontalAlignment="Right" Width="50"/>
        </Grid>
    </Grid>
</Window>
