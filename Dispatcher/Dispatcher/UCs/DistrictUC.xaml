<UserControl x:Class="Dispatcher.DistrictUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dispatcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Height="120" Margin="10">
            <Button x:Name="Level1Button" Height="30" Width="30" Content="1"/>
            <Button x:Name="Level2Button" Height="30" Width="30" Content="2"/>
            <Button x:Name="Level3Button" Height="30" Width="30" Content="3"/>
            <Button x:Name="Level4Button" Height="30" Width="30" Content="4"/>
        </StackPanel>
        <Button x:Name="DontPanicDistrict" Margin="5, 10" VerticalAlignment="Bottom" Height="40" Content="Сброс"/>
        <Border Grid.Row="0" Grid.Column="1" Margin="10" BorderBrush="Black" BorderThickness="2">
            <Image Source="/Assets/District/Levels/1Level.jpg"/>
        </Border>
    </Grid>
</UserControl>
